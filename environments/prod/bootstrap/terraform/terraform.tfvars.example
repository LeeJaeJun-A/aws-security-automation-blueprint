# Bootstrap Terraform Backend 설정 예시
# 이 파일을 terraform.tfvars로 복사하여 사용하세요

aws_region = "ap-northeast-2"
environment = "prod"

# S3 버킷 이름 (전역적으로 고유해야 함)
# 예: <회사명>-<프로젝트명>-terraform-state-<환경>
state_bucket_name = "your-company-aws-security-automation-terraform-state-prod"

# DynamoDB 테이블 이름 (선택사항, 기본값 사용 가능)
# dynamodb_table_name = "terraform-state-lock-prod"

# State 버전 관리 설정 (선택사항)
# enable_state_lifecycle = true
# state_version_expiration_days = 90

# DynamoDB Point-in-Time Recovery (선택사항)
# enable_dynamodb_point_in_time_recovery = true

# 공통 태그
tags = {
  Project     = "aws-security-automation"
  ManagedBy   = "Terraform"
  Purpose     = "Backend"
  Environment = "prod"
}

